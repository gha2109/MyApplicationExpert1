<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomIntervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intervention Module "
            android:textAllCaps="true"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/nomSociete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La societe exemple"
            android:textAllCaps="true"
            android:textColor="#191717"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rue paradis 7894 paris"
            android:textAllCaps="false"
            android:textColor="#807B7B"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heuredebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15:00 -" />

            <TextView
                android:id="@+id/heurefin"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17:00" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:duplicateParentState="false"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>